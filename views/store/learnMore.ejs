<%- include('../partials/head.ejs') %>

<main>
    <section class="learn-more-section">
        <div class="learn-more-container anim-fade-up">
            <div class="learn-more-grid">
                <!-- Lottie Animation -->
                <div class="learn-more-lottie">
                    <dotlottie-wc
                        src="<%= service.lottieUrl %>"
                        style="width: 100%; height: 100%;"
                        autoplay
                        loop>
                    </dotlottie-wc>
                </div>

                <!-- Content -->
                <div class="learn-more-content">
                    <h1 class="section-heading"><%= service.title %></h1>
                    <p class="section-subheading"><%= service.description %></p>

                    <h3 class="features-heading">Key Features:</h3>
                    <ul class="features-list">
                        <% service.features.forEach(feature => { %>
                            <li class="feature-item"><%= feature %></li>
                        <% }); %>
                    </ul>

                    <!-- Buttons -->
                    <a href="/services" class="back-button">← Back to All Services</a>
                    <% if (slug === 'real-time-tracking') { %>
                        <a href="/tracking" class="go-now-button">Track Now →</a>
                    <% } else if (slug === 'fleet-management') { %>
                        <% if (isHost) { %>
                            <a href="/host/fleet-management" class="go-now-button">View Dashboard →</a>
                        <% } %>
                    <% } else { %>
                        <a href="/contact" class="go-now-button">Get Started →</a>
                    <% } %>
                </div>
            </div>
        </div>
    </section>
</main>

<%- include('../partials/footer.ejs') %>
