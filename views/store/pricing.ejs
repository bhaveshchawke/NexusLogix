<%- include('../partials/head.ejs') %>

<section class="pricing-section">
    <div class="pricing-container">
        <h2 class="section-heading anim-fade-up">Flexible Plans for Every Business</h2>
        <p class="section-subheading anim-fade-up" style="animation-delay: 0.2s;">
            Choose the perfect plan that scales with your business needs. Transparent pricing, no hidden fees.
        </p>
        
        <div class="pricing-grid">
            <div class="pricing-card anim-fade-up" style="animation-delay: 0.4s;">
                <h3 class="plan-name">Starter</h3>
                <p class="plan-description">For new businesses and startups</p>
                <ul class="plan-features">
                    <li>Up to 100 deliveries / month</li>
                    <li>Standard Delivery Speed</li>
                    <li>Real-time Tracking</li>
                    <li>Email Support</li>
                </ul>
                <a href="/quote" class="plan-cta">Choose Plan</a>
            </div>

            <div class="pricing-card highlighted anim-fade-up" style="animation-delay: 0.6s;">
                <div class="popular-badge">Most Popular</div>
                <h3 class="plan-name">Professional</h3>
                <p class="plan-description">For growing businesses</p>
                <ul class="plan-features">
                    <li>Up to 500 deliveries / month</li>
                    <li>Same-Day Express Delivery</li>
                    <li>Advanced Real-time Tracking</li>
                    <li>Priority Email & Phone Support</li>
                </ul>
                <a href="/quote" class="plan-cta">Choose Plan</a>
            </div>

            <div class="pricing-card anim-fade-up" style="animation-delay: 0.8s;">
                <h3 class="plan-name">Enterprise</h3>
                <p class="plan-description">For large-scale operations</p>
                <ul class="plan-features">
                    <li>Unlimited Deliveries</li>
                    <li>Dedicated Delivery Fleet</li>
                    <li>Full API Integration</li>
                    <li>24/7 Dedicated Support</li>
                </ul>
                <a href="/contact" class="plan-cta">Contact Sales</a>
            </div>
        </div>
    </div>
</section>

