<%- include('../partials/head.ejs') %>

<main>
  <section class="form-section">
    <div class="form-card anim-fade-up">
      <div class="form-header">
        <h2 class="section-heading">Create a New Shipment</h2>
        <p class="section-subheading">
          Enter recipient and package details to generate a new order.
        </p>
      </div>

      <form action="/host/addShipment" method="POST" class="user-form">
        <!-- Recipient -->
        <h3 class="form-sub-heading">Recipient's Details (Jise Package Bhejna Hai)</h3>

        <div class="form-group">
          <label for="recipientName">Full Name</label>
          <input
            type="text"
            id="recipientName"
            name="recipientName"
            class="form-input"
            placeholder="Enter recipient's full name"
            required
          />
        </div>

        <div class="form-group">
          <label for="recipientAddress">Delivery Address</label>
          <input
            type="text"
            id="recipientAddress"
            name="recipientAddress"
            class="form-input"
            placeholder="Enter delivery address"
            required
          />
        </div>

        <div class="form-group">
          <label for="recipientPhone">Phone Number</label>
          <input
            type="tel"
            id="recipientPhone"
            name="recipientPhone"
            class="form-input"
            placeholder="e.g. +91 9876543210"
            required
          />
        </div>

        <hr class="form-divider" />

        <!-- Package -->
        <h3 class="form-sub-heading">Package Details</h3>

        <div class="form-grid">
          <div class="form-group">
            <label for="packageWeight">Weight (kg)</label>
            <input
              type="number"
              id="packageWeight"
              name="packageWeight"
              class="form-input"
              placeholder="Enter package weight"
              required
            />
          </div>

          <div class="form-group">
            <label for="packageContents">Contents</label>
            <input
              type="text"
              id="packageContents"
              name="packageContents"
              class="form-input"
              placeholder="e.g. Electronics, Clothes"
              required
            />
          </div>
        </div>

        <button type="submit" class="form-button">
          Create Shipment & Get Tracking ID
        </button>
      </form>
    </div>
  </section>
</main>

<%- include('../partials/footer.ejs') %>
